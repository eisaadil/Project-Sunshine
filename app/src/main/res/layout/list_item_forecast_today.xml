<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="left"
    android:minHeight="?android:listPreferredItemHeight"
    android:background="#3090C7"
    android:paddingTop="35dp"
    android:paddingBottom="35dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@id/list_item_forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            />
        <TextView
            android:id="@id/list_item_forecast_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="15dp"
           />
        <TextView
            android:id="@id/list_item_forecast_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@id/list_item_forecast_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@id/list_item_forecast_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="42dp"
            android:textColor="#FFFFFF"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>