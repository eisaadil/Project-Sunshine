<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:minHeight="?android:listPreferredItemHeight"
    android:id="@+id/list_item_forecast_root">
    <ImageView
        android:id="@+id/list_item_forecast_icon"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/list_item_forecast_date"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed"
            />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/list_item_forecast_desc"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/list_item_forecast_max"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"/>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/list_item_forecast_min"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>




</LinearLayout>
